@{
    ViewData["Title"] = "Listagem de Pedidos";
    //Layout = null;
}

<style>
    p{
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }

    .jumbotron{
        width: 100%;
        height: 50%;
        background: rgba(232, 218, 191, 0.9);
    }

    table{
        width: 100%;
        text-align: center;
    }
</style>

<div class="container container-xl">
    <div class="jumbotron">
        <center><h2 id="listagemTitulo">Seus Pedidos</h2></center>
        <table>
            <thead>
                <tr>
                    <th scope="col">Id do Pedido</th>
                    <th scope="col">Item</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Cancelar Item</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="col">1</td>
                    <td scope="col">Porta</td>
                    <td scope="col">sadasdsaddddddddddddddddddsdadsdada</td>
                    <td scope="col">2</td>
                    <td scope="col">R$ 90,00</td>
                    <td scope="col"><a class="btn btn-primary">Editar</a></td>
                    <td scope="col"><a class="btn btn-danger">Cancelar</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>