@model MVC.Models.Login;
@{
    ViewData["Title"] = "Tela de login";
}

<style>
    p{
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }

    .jumbotron{
        width: 100%;
        height: 50%;
        background: rgba(232, 218, 191, 0.9);
    }

    table{
        width: 100%;
        text-align: center;
    }
</style>  

<div class="container container-xl">
    <div class="jumbotron">
        <center><h2 id="listagemTitulo">Fa√ßa login</h2></center>
        <form class="container" asp-controller="Usuario" asp-action="Entrar">
            <div class="form-group" asp-controller="Usuario">
                <label>Email:</label>
                <input type="text" asp-for="email" class="form-control">
                @Html.ValidationMessageFor(x => x.email)
            </div>
            <div class="form-group">
                <label>Senha:</label>
                <input type="password" asp-for="senha" class="form-control">
                @Html.ValidationMessageFor(x => x.senha)
            </div>

            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
        <br>

        <a class="btn btn-primary" asp-controller="Usuario" asp-action="Cadastrar">Criar conta</a>
    </div>
</div>