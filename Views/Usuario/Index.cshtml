@model MVC.Models.Login;
@{
    ViewData["Title"] = "Tela de login";
}
<style>
        .jumbotron
        {
            background-color: rgba(70, 43, 14, 0.8);
            border-radius: 10px;
            border-color: white;
            border-style: solid;
            border-width: 2px;
            width: auto;
            height: auto;
            color: white;
            padding: 10px 5px;
        }
        
        table
        {
            border-bottom: 1px solid white;
        }

        td
        {
            color: White;
        }
</style>
<div class="container container-xl">
    <div class="jumbotron">
        <center><h2 id="listagemTitulo">Fa√ßa login</h2></center>
        <form class="container" asp-controller="Usuario" asp-action="Entrar">
            <div class="form-group" asp-controller="Usuario">
                <label>Email:</label>
                <input type="text" asp-for="email" class="form-control">
                @Html.ValidationMessageFor(x => x.email)
            </div>
            <div class="form-group">
                <label>Senha:</label>
                <input type="password" asp-for="senha" class="form-control">
                @Html.ValidationMessageFor(x => x.senha)
            </div>

            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
        <br>
        
        <a class="btn btn-primary" asp-controller="Usuario" asp-action="Cadastrar">Criar conta</a>
    </div>
</div>