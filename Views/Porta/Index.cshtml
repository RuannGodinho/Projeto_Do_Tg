@model IEnumerable<MVC.Models.Porta>
@{
    ViewData["Title"] = "Index";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RGR</title>
    
    <link rel="stylesheet" href="../css/_Main.css"/> 
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/1788d3ed3e.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
       
                  
        
    </header>

    <div class="container">
        @foreach (var item in Model)
        {
            var classeQtd = "";

            if(item.Id == 1)
                classeQtd = "campoQuantidade";

            else if(item.Id == 2)
                classeQtd = "campoQuantidade2";

            else if(item.Id == 3)
                classeQtd = "campoQuantidade3";


        <div class="card" id="card_carrinhos">
            <div class="card__left">
            <span>
                @Html.DisplayFor(model => item.Nome)
            </span>
            <h2>
                @Html.DisplayFor(model => item.Descricao)
            </h2>
            <span id="preco">
                R$ @Html.DisplayFor(model => item.Valor)
            </span>
            <select class="@classeQtd">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            
            <button type="button" class="btn btn-success botao-comprar" onclick=troca_src(@item.Id)>Adicionar ao carrinho</button>
            </div>

            <div class="card__right">
                @if(item.Id == 1)
                {
                    <a><img class="Imagem_Porta" src="~/css/Porta.jpeg" width="200px"></a>
                }
                else if(item.Id == 2)
                {
                    <a><img class="Imagem_Porta" src="~/css/PortaNigga.jpeg" width=></a>                    
                }
                else if(item.Id == 3)
                {
                   <a><img class="Imagem_Porta" src="~/css/PortaMacica.jpeg" width="200px"></a> 
                }
                else if(item.Id == 4)
                {
                   <a><img class="Imagem_Porta" src="~/css/PortaMacica.jpeg" width="200px"></a> 
                }
                else if(item.Id == 5)
                {
                   <a><img class="Imagem_Porta" src="~/css/Porta.jpeg" width="200px"></a> 
                }
                else if(item.Id == 6)
                {
                   <a><img class="Imagem_Porta" src="~/css/PortaNigga.jpeg" width="200px"></a> 
                }

            </div>
        </div>
        }
    </div>
    <br><br><br><br><br><br><br>

            
</body>

<script>
    function troca_src(idProduto){
        var tipoTabela = 1;
        var qtdProdutos = idProduto == 1 ? $(".campoQuantidade").val() : idProduto == 2 ? $(".campoQuantidade2").val() : $(".campoQuantidade3").val();

    $.ajax({
        url:"/Carrinho/SalvarNoCarrinho",
        type: 'Post',
        data:{
            idProduto,
            tipoTabela,
            qtdProdutos
        },   
    success: function(result){
        window.location.href = "@Url.Action("Index", "Carrinho")";
    }});
}
</script>
