@model IEnumerable<MVC.Models.Janela>;
@{
    ViewData["Title"] = "Admin Page - Porta";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RGR</title>
    
    <link rel="stylesheet" href="../css/_Main.css"/> 
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/1788d3ed3e.js" crossorigin="anonymous"></script>
    <style>
        .jumbotron
        {
            background-color: rgba(70, 43, 14, 0.8);
            border-radius: 10px;
            border-color: white;
            border-style: solid;
            border-width: 2px;
            width: auto;
            height: 100%;
        }
        
        table
        {
            border-bottom: 1px solid white;
        }

        td
        {
            color: White;
        }
    </style>
</head>


<body>
    <header>
        <div id="icones">
                    
                    <a asp-controller="Usuario" asp-action="Index"><i class="fa-solid fa-user fa-3x" id="usuarioIcon"></i></a>
                    <a asp-controller="Carrinho" asp-action="Index"><i class="fa-solid fa-cart-shopping fa-3x" id="carrinhoIcon"></i></a>
                </div>

        <form class="d-flex" role="search">
                    <input class="barra" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit" id="botao-busca">Search</button> 

                    
                </form>

        <div class="container">
                

        </div>

        <div class="container" id="trabalhos">
            <a asp-area="" asp-controller="Home" asp-action="Index">Nossos trabalhos<img src="~/css/mala.png" alt=""></a>
        </div>


        <div class="container">
           
        </div>
             
                  
        <nav class="navbar navbar-expand-sm  navbar-light  mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RGR</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="barra-nav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Contatos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Porta">Portas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Janela">Janelas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Fechadura">Fechaduras</a>
                        </li>
                    </ul>
                </div>                   
            </div>
        </nav>
    </header>

    <div class="container">
        <a class="btn btn-primary" style="float: right;margin-top: 5px;margin-right: 5px;" asp-controller="admin" asp-action="AdicionarJanela">Adicionar</a>
        <div class="jumbotron">
            <table class="table">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Nome</td>
                        <td>Medida</td>
                        <td>Cor</td>
                        <td>Preço</td>
                        <td>Descrição</td>
                        <td>Quantidade de folhas</td>
                        <td>Estoque</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(Model => item.Id)</td>
                        <td>@Html.DisplayFor(Model => item.Nome)</td>
                        <td>@Html.DisplayFor(Model => item.Medida)</td>
                        <td>@Html.DisplayFor(Model => item.Cor)</td>
                        <td>@Html.DisplayFor(Model => item.Valor)</td>
                        <td>@Html.DisplayFor(Model => item.Descricao)</td>
                        <td>@Html.DisplayFor(Model => item.QtdFolhas)</td>
                        <td>@Html.DisplayFor(Model => item.Quantidade)</td>
                        <td scope="col"><a class="btn btn-primary" asp-controller="Admin" asp-action="Editar" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o" aria-hidden="true" alt="Editar"></i></a></td>
                        <td scope="col"><a class="btn btn-danger" asp-controller="Fechadura" asp-action="Excluir" asp-route-id="@item.Id"><i class="fa fa-ban" aria-hidden="true"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>